<div class="spaced-y-10">
    {% for episode in page.episodes|reverse %}
        {% set podcast = page.podcasts[episode.podcast] %}

        <article>
            <h2 class="text-lg">
                <a href="{{ episode.url }}" class="text-inherit" tabindex="-1">
