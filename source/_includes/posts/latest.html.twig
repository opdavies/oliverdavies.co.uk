{% if data.posts and page.url != '/blog' %}
    <div class="mb-6 lh-copy">
        <h2>Latest Blog Posts</h2>

        <ul class="bullets">
            {% for post in data.posts|slice(0, site.latest_posts) %}
                <li>
                    <a href="{{ post.url }}">
                        {{ post.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
