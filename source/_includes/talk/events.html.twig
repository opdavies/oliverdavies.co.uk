<div class="mt4">
    <h2>Events</h2>

    {% set events = [] %}
    {% for date in site.events.dates %}
        {% set events = events|merge([{
            date: date,
            event: site.events.events[date.event],
        }]) %}
    {% endfor %}

    {% include 'talks-table' with {
        events: events,
        talk_page: true,
    } %}
</div>
