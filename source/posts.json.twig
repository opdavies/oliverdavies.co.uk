---
permalink: posts.json
use: [posts]
---

{
    "posts": [
        {% for post in data.posts|reverse %}
            {
                "id": "{{ loop.index }}",
                "title": {{ post.title|json_encode|raw }},
                "created": "{{ post.date }}",
                "updated": "{{ post.date }}",
                "path": "{{ post.url|trim('/', 'right') }}",
                "content": {{ post.blocks.content|json_encode|raw }},
                "status": "{{ post.draft ? '0' : '1' }}"
            }{% if not loop.last %},{% endif %}
        {% endfor %}
    ]
}