<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            {% if show_talk %}<th>Talk</th>{% endif %}
            <th>Event</th>
        </tr>
    </thead>
    <tbody>
        {% for event in events|sortbyfield('date')|reverse %}
            <tr>
                <td>
                    {{ event.date|date('j F Y') }}
                </td>

                {% if show_talk %}
                    <td>
                        <a href="{{ event.talk.url }}">
                            {{ event.talk.title }}
                        </a>
                    </td>
                {% endif %}

                <td>
                    {{ event.title }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
