<div class="talk-events">
    <h2>Events</h2>

    {% set events = [] %}
    {% for event in page.events %}
        {% set event = event|merge({ talk: page })|merge(site.events[event.id]) %}
        {% set events = events|merge([event]) %}
    {% endfor %}

    {% include "talks-table" with { events: events, hide_talk: true } %}
</div>
