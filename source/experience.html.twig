<h1>Experience</h1>

{% for experiences in page.experiences|batch(2) %}
    <div class="row">
        {% for experience in experiences %}
            <div class="experience col-md-6">
                <h2>{{ experience.name }}</h2>

                {% if experience.logo %}
                    <img class="experience--logo" src="{{ experience.logo }}" alt="{{ experience.name }} logo">
                {% endif %}

                {% if experience.website %}
                    <div>
                        <a href="{{ experience.website }}">
                            {{ experience.website }}
                        </a>
                    </div>
                {% endif %}

                <div class="role-wrapper">
                    {% spaceless %}
                        {{ experience.role }} from
                        {{ experience.start }} to {{ experience.end|default('Present') }}
                        {% if experience.location %}
                            ({{ experience.location }})
                        {% endif %}
                    {% endspaceless %}.
                </div>

                {{ experience.description|raw }}
            </div>
        {% endfor %}
    </div>
{% endfor %}
